---
// About Page
import { getEntry } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';

const entry = await getEntry('pages', 'about');
const { Content } = await entry.render();
---

<MainLayout
  title={entry.data.title}
  description={entry.data.description}
  currentPage={entry.data.page}
>
  <article class="content-page">
    <Content />
  </article>
</MainLayout>

<style>
  .content-page {
    max-width: 100%;
  }

  .content-page :global(h1) {
    text-align: center;
    margin-bottom: var(--spacing-md);
  }

  .content-page :global(h2) {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .content-page :global(h3) {
    color: var(--accent-red);
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
    font-size: 1.5rem;
  }

  .content-page :global(p) {
    margin-bottom: var(--spacing-sm);
    line-height: 1.6;
  }

  .content-page :global(ul),
  .content-page :global(ol) {
    margin-left: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .content-page :global(li) {
    margin-bottom: var(--spacing-xs);
    line-height: 1.6;
  }

  .content-page :global(strong) {
    color: var(--accent-blue);
    font-weight: 700;
  }

  .content-page :global(em) {
    font-family: var(--font-handwritten);
    font-size: 1.1em;
  }

  .content-page :global(a) {
    color: var(--accent-blue);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .content-page :global(a:hover) {
    color: var(--accent-red);
  }

  .content-page :global(hr) {
    width: 100%;
    height: 3px;
    margin: var(--spacing-md) 0;
    background: none;
    border: 0;
    position: relative;
    overflow: visible;
  }

  .content-page :global(hr::before) {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--divider-color);
    transform: scaleY(1);
    filter: url(#pencil-texture);
  }
</style>
